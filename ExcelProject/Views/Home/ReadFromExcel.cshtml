
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ReadFromExcel</title>
</head>
<body>
    <div class="container-fluid">
        <div class="card mt-3">
            <div class="card-header font-weight-bold">Tải lên tập tin</div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <h1 class="mt-4">DanhSachSinhVien.xlsx</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Sheet 1</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-table mr-1"></i>Bảng dữ liệu</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                @foreach (System.Data.DataColumn col in Model.Columns)
                                {
                                    <th>@col.Caption</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (System.Data.DataRow row in Model.Rows)
                            {
                                <tr>
                                    @foreach (var cell in row.ItemArray)
                                    {
                                        <td>@cell.ToString()</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>


                    <a href="/Home/Export"><button class="btn btn-primary">Tải file excel</button></a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
